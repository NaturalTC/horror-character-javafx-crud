<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.crudjavafxhorror.controller.PopupController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="250.0">
         <children>
            <Label fx:id="lblPopupTitle" alignment="CENTER" prefHeight="70.0" prefWidth="250.0" text="( changes based off selection )">
               <font>
                  <Font name="Storm Gust" size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="56.0" prefWidth="229.0" text="Horror Character Type ">
               <font>
                  <Font name="Storm Gust" size="21.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmbCharacterType" prefHeight="34.0" prefWidth="213.0" />
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="304.0">
               <children>
                  <Label text="Name: ">
                     <font>
                        <Font name="Storm Gust" size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="250.0">
               <children>
                  <Label text="Health: ">
                     <font>
                        <Font name="Storm Gust" size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtHealth" prefWidth="160.0" />
               </children>
            </HBox>
            <RadioButton fx:id="rbtnTransformed" mnemonicParsing="false" prefHeight="65.0" prefWidth="149.0" text="Transformed?">
               <font>
                  <Font name="Storm Gust" size="19.0" />
               </font>
            </RadioButton>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" onAction="#returnToDashboard">
                     <font>
                        <Font name="Storm Gust" size="21.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnSubmit" mnemonicParsing="false" text="Submit" onAction="#onSubmit">
                     <font>
                        <Font name="Storm Gust" size="21.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
